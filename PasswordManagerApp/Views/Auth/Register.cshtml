@model PasswordManagerApp.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

   
                <div class="auth-content">
                    <p class="text-center">SIGNUP TO GET INSTANT ACCESS</p>
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>

                            <input asp-for="Email" class="form-control underlined" placeholder="Enter email address">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Master password</label>

                            <input asp-for="Password" class="form-control underlined" placeholder="Type password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RepeatPassword">Repeat master password</label>

                            <input asp-for="RepeatPassword" class="form-control underlined" placeholder="Re-type password">
                            <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-primary">Sign Up</button>
                        </div>
                        <div class="form-group">
                            <p class="text-muted text-center">Already have an account? <a asp-action="Login">Login</a></p>
                        </div>
                    </form>
                </div>
           




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
