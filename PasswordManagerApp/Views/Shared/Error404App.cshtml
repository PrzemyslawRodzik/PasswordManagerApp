
@{
    ViewData["Title"] = "Error404App";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<article class="content error-404-page">
    <section class="section">
        <div class="error-card">
            <div class="error-title-block">
                <h1 class="error-title">404</h1>
                <h2 class="error-sub-title"> Sorry, page not found </h2>
            </div>
            <div class="error-container">
                <p>You better try our awesome search:</p>
                <div class="row">
                    <div class="col-12">
                        <div class="input-group">
                            <input type="text" class="form-control">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="button">Search</button>
                            </span>
                        </div>
                    </div>
                </div>
                <br>
                <a class="btn btn-primary" asp-controller="Wallet" asp-action="Index"><i class="fa fa-angle-left"></i> Back to Dashboard</a>
            </div>
        </div>
    </section>
</article>

